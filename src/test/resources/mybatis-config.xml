            <!--<property name="dialectClass" value="com.segi.uhomecp.mybatis.paginator.dialect.CustomMySQLDialect" />-->
        <!--</plugin>-->
    <!--</plugins>-->

    <typeAliases>
        <typeAlias type="com.fcs.demo.DruidDataSourceFactory" alias="DRUID"></typeAlias>
    </typeAliases>

    <plugins>
        <plugin interceptor="com.fcs.plugins.PagingInterceptor" ></plugin>
    </plugins>

    <environments default="test">
        <environment id="test">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="DRUID">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="com/fcs/demo/dao/UserMapper.xml"></mapper>
    </mappers>
</configuration>